

  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    body {
      font-family: system-ui, sans-serif;
      padding: 2rem;
      margin: 0;
      background: #f5f7fb;
      color: #333;
    }
    h1, h2 {
      margin-top: 0;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      max-width: 500px;
      margin: 2rem auto;
    }
    input, select, button {
      padding: 0.75rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    fieldset {
      border: none;
      padding: 0;
    }
    label {
      display: block;
      margin-bottom: 0.5rem;
    }
    #generated-output {
      margin-top: 2rem;
      padding: 1rem;
      background: #fff;
      border-radius: 6px;
      white-space: pre-wrap;
    }
  </style>
</head>
<body>

  <h1>⚖️ PolicyCodex</h1>
  <p>Instantly generate GDPR, CCPA, and UK-compliant privacy policies for your site.</p>

  <form id="gen-form">
    <input type="text" name="business_name" placeholder="Business Name" required />
    <input type="url" name="website_url" placeholder="Website URL (optional)" />
    
    <select name="company_type" required>
      <option value="">Select Company Type</option>
      <option value="SaaS">SaaS</option>
      <option value="eCommerce">eCommerce</option>
      <option value="Blog">Blog</option>
    </select>

    <fieldset>
      <legend><strong>Target Markets</strong></legend>
      <label><input type="checkbox" name="markets" value="EU" /> EU</label>
      <label><input type="checkbox" name="markets" value="UK" /> UK</label>
      <label><input type="checkbox" name="markets" value="US-CCPA" /> US (CCPA)</label>
    </fieldset>

    <button type="submit">Generate My Policies</button>
  </form>

  <div id="generated-output"></div>

  <script>
    const form = document.getElementById('gen-form');
    const output = document.getElementById('generated-output');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      output.textContent = "⏳ Generating your documents...";

      const formData = new FormData(form);
      const payload = {
        business_name: formData.get('business_name'),
        website_url: formData.get('website_url'),
        company_type: formData.get('company_type'),
        target_markets: [...formData.getAll('markets')]
      };

      try {
        const res = await fetch('/api/generate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        const result = await res.text(); // Or use .json() if your endpoint returns structured output
        output.textContent = result;
      } catch (err) {
        output.textContent = "❌ Error: Something went wrong. Try again shortly.";
      }
    });
  </script>

</body>
</html>


